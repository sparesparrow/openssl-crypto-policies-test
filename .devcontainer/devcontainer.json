{
    "name": "OpenSSL Crypto-policies Test Environment",
    "image": "fedora:41",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": false,
            "username": "vscode",
            "upgradePackages": true,
            "nonFreePackages": true
        },
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {
            "format": "timestamp"
        },
        "ghcr.io/lukewiwa/features/shellcheck:0": {
            "version": "stable"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "timonwong.shellcheck",
                "mads-hartmann.bash-ide-vscode",
                "foxundermoon.shell-format",
                "rogalmic.bash-debug",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml",
                "github.vscode-github-actions",
                "streetsidesoftware.code-spell-checker",
                "eamodio.gitlens",
                "yzhang.markdown-all-in-one",
                "davidanson.vscode-markdownlint"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "icon": "terminal-bash"
                    }
                },
                "files.trimTrailingWhitespace": true,
                "files.insertFinalNewline": true,
                "files.trimFinalNewlines": true,
                "shellcheck.enable": true,
                "shellcheck.useWorkspaceRootAsCwd": true,
                "shellcheck.run": "onSave",
                "shellcheck.executablePath": "shellcheck",
                "shellformat.flag": "-i 4 -ci -bn -sr",
                "editor.formatOnSave": true,
                "editor.rulers": [
                    80,
                    100
                ],
                "editor.renderWhitespace": "boundary",
                "workbench.colorCustomizations": {
                    "editorRuler.foreground": "#3d3d3d40"
                }
            }
        }
    },
    "runArgs": [
        "--privileged",
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--network=host"
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],
    "initializeCommand": "mkdir -p \"${localWorkspaceFolder}/.devcontainer/logs\" && ls -la \"${localWorkspaceFolder}/.devcontainer/logs\"",
    "postCreateCommand": [
        "set -x",
        "dnf update -y",
        "dnf install -y openssl openssl-devel tcpdump net-tools wireshark-cli ShellCheck crypto-policies-scripts gnutls-utils git nc procps-ng psmisc iproute bind-utils lsof strace bats tree jq vim",
        "chown -R vscode:vscode /workspace",
        "echo 'Dependencies installed successfully' >> /workspace/.devcontainer/logs/startup.log"
    ],
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",
    "workspaceFolder": "/workspace",
    "remoteEnv": {
        "SHELL": "/bin/bash",
        "EDITOR": "code --wait",
        "OPENSSL_CONF": "/etc/ssl/openssl.cnf",
        "PATH": "${containerEnv:PATH}:/workspace/bin"
    }
}